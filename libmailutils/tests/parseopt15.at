AT_SETUP([mixed long and short options])
AT_KEYWORDS([parseopt parseopt_long parseopt_short parseopt15.at])
AT_CHECK([
PARSEOPT_DEFAULT
parseopt --file=filename -o -xa --find word -j10 command line arguments
],
[0],
[rc=0
file_name=filename
opt_value=(null)
x_option=1
a_option=1
find_value=word
d_option=0
jobs=10
argv:
0: command
1: line
2: arguments
])
