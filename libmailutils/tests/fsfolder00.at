AT_SETUP([List])
AT_KEYWORDS([fsfolder folder-list])

AT_CHECK([
mkdir dir
> dir/foo
> dir/bar
> dir/foo.mbox
mkdir dir/subdir
> dir/subdir/file
> dir/subdir/baz.mbox

fsfolder -name=dir -sort dnl
 list "" "*" dnl
 list subdir "*" dnl
 list "" "*.mbox" dnl
 list "subdir" "*.mbox"
],
[0],
[listing '' '*'
d- /    0 dir/bar
d- /    0 dir/foo
d- /    0 dir/foo.mbox
d- /    0 dir/subdir
d- /    1 dir/subdir/baz.mbox
d- /    1 dir/subdir/file
listing 'subdir' '*'
d- /    0 dir/subdir/baz.mbox
d- /    0 dir/subdir/file
listing '' '*.mbox'
d- /    0 dir/foo.mbox
d- /    1 dir/subdir/baz.mbox
listing 'subdir' '*.mbox'
d- /    0 dir/subdir/baz.mbox
])

AT_CLEANUP
