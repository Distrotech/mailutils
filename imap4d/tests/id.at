AT_SETUP([ID command])
AT_KEYWORDS([id])

m4_pushdef([IMAP4D_OPTIONS],[IMAP4D_DEFAULT_OPTIONS])

IMAP4D_CHECK([],
[1 ID NIL
X LOGOUT
],
[* OK IMAP4rev1 Test mode
1 BAD ID Wrong state
* BYE Session terminating.
X OK LOGOUT Completed
])

m4_popdef([IMAP4D_OPTIONS])

IMAP4D_CHECK([],
[1 ID NIL
X LOGOUT
],
[* PREAUTH IMAP4rev1 Test mode
1 OK ID Completed
* BYE Session terminating.
X OK LOGOUT Completed
])

AT_CLEANUP

