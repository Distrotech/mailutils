AT_SETUP([create])
AT_KEYWORDS([create create00])

AT_CHECK([
AT_DATA([input],[dnl
1 create flat
X LOGOUT
])

imap4d IMAP4D_OPTIONS < input | tr -d '\r'
find . -name flat
],
[0],
[* PREAUTH IMAP4rev1 Test mode
1 OK CREATE Completed
* BYE Session terminating.
X OK LOGOUT Completed
./flat
])

AT_CLEANUP

